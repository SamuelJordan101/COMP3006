<!DOCTYPE html>
<html>

<head>
    <title>Finance</title>

    <script src="/Finance.js"></script>
    <link rel="stylesheet" href="/Finance.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>

<body>

    <ul>
        <li><a href="Login.html">Logout</a></li>
    </ul>

    <h1>Finance App</h1>

    <h2>Balance: £<span id="Balance"></span></h2>

    <div id="Graph">
        <canvas id="Expenses" style="width: 512px; height: 256px"></canvas>

        <script>
            var ctx = document.getElementById('Expenses').getContext('2d');
            var chart = new Chart(ctx, {
                // The type of chart we want to create
                type: 'line',

                // The data for our dataset
                data: {
                    labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July'],
                    datasets: [{
                        label: 'Balance',
                        backgroundColor: 'rgb(0, 150, 255)',
                        borderColor: 'rgb(0, 100, 255)',
                        data: [500.54, 245.54, 627.83, 936.16, 32.96, 350.83, 503.51]
                    }]
                },

                // Configuration options go here
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    legend: {
                        display: false
                    },
                    scales: {
                        xAxes: [{
                            scaleLabel: {
                                display: true,
                                labelString: 'Month'
                            }
                        }],
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            },
                            scaleLabel: {
                                display: true,
                                labelString: '£'
                            }
                        }]
                    }
                }
            });
        </script>
    </div>

    <div id="Transactions">
        <h2>New Payment</h2>
        <p>Add New Payment: £ <input type="number" min="1" pattern="^\d*(\.\d{0,2})?$" step=".01"></p>
        <button id="NewPayment">Add Payment</button>
    </div>

    <div id="Amounts">
        <h2>Payments</h2>

        <table id="Payments" style="width:80%">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Balance</th>
                    <th>Remove</th>
                </tr>
            </thead>

            <% for(var i=0; i<Transactions.length; i++) {%>
                <tbody>
                    <td><%= Transactions[i].%></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td><button id= <% i %> >Remove Payment</button></td>
                </tbody>
            <% } %>

            <tr>
                <td>Jill</td>
                <td>Smith</td>
                <td>50</td>
                <td>500</td>
                <td><button id="RemovePayment">Remove Payment</button></td>
            </tr>
        </table>
    </div>

</body>

</html>